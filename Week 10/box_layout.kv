BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint: 0.3, 1
            id: clear
            text: 'Clear'
            on_press: app.clear_fields()
        TextInput:
            size_hint: 0.7, 1
            id: input_name
            text: ''

    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint: 0.3, 1
            id: greet
            text: 'Greet'
            on_press: app.handle_greet()
        Label:
            size_hint: 0.7, 1
            id: output_label
            text: 'Enter your name'
            color: 1, 1, 0, 1